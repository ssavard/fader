<% provide(:title, @market.name) %>
<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
<div class=map1 style='width: 400px;'>
  <div id="map" style='width: 100%; height: 400px; '></div>
</div>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @market.name %>
      </h1>
      <p>Market Rank: <%= @market.rank %></p>
      <p>Description: <%= @market.description %></p>
      <p>Longitude: <%= @market.longitude %></p>
      <p>Latitude: <%= @market.latitude %></p>
      <%= button_to "Edit", edit_market_path(@market), :class => "btn btn-primary", :method => :get %>
      
      <% if current_user.admin? %>
        <%= button_to "Delete", @market, :class => "btn btn-primary", method: :delete,
                                  data: { confirm: "Are you sure?" } %>
      <% end %>
    </section>
  </aside>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    
    markers = handler.addMarkers([
      {
        "lat": <%= @market.latitude %>,
        "lng": <%= @market.longitude %>,
        "infowindow": "<%= @market.name %>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(10);
  });
</script>

