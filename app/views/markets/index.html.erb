<% provide(:title, 'All markets') %>

<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>


<h1>Television Markets</h1>

<%= button_to "Add Market", new_market_path, :class => "btn btn-primary", :method => :get %>

  
<div class=map1 id="map" style='width: 750px; height: 1000px; '></div>





<div id="marketTable" >
  
  <%= will_paginate :page_links => false %>

<table id="markets" class="table table-bordered table-striped" >
  
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      
    </tr>
  </thead>
  <tbody>
    <% @markets.each do |market| %>
    <tr>
      <td><%= market.rank %></td>
      <td><%= link_to market.name, market %>
      
      
    </tr>
    <% end %>
  </tbody>
</table>



</div>


  

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    
  });
</script>