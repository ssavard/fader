<% provide(:title, 'All markets') %>
<h1>All markets</h1>

<%= button_to "Add Market", new_market_path, :class => "btn btn-primary", :method => :get %>

<table class="table table-hover">
  
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @markets.each do |market| %>
    <tr>
      <td><%= market.rank %></td>
      <td><%= link_to market.name, market %>
      
      <td><%= market.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>



